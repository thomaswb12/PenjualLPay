<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:layout_width="279dp"
        android:layout_height="485dp"

        android:layout_marginBottom="36dp"
        android:layout_marginEnd="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/mix_shape_border_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545">

        <RelativeLayout
            android:layout_width="297dp"
            android:layout_height="496dp">

            <ImageView
                android:id="@+id/imgRegisLogo"
                android:layout_width="122dp"
                android:layout_height="86dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="401dp"
                android:layout_marginEnd="99dp"
                android:layout_marginStart="76dp"
                android:layout_marginTop="9dp"
                app:layout_constraintBottom_toTopOf="@+id/frmLoginBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_lpay_seller" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_alignEnd="@+id/edtLoginPhoneNumber"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="301dp"
                android:layout_marginEnd="195dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="160dp"
                app:srcCompat="@drawable/ic_local_phone_white_24dp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="49dp"
                android:layout_height="38dp"
                android:layout_alignEnd="@+id/edtLoginPhoneNumber"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="249dp"
                android:layout_marginEnd="195dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="209dp"
                app:srcCompat="@drawable/ic_email_white_24dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/edtLoginPhoneNumber"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="194dp"
                android:layout_marginEnd="193dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="257dp"
                app:srcCompat="@drawable/ic_lock_white_24dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="115dp"
                android:layout_height="27dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="30dp"
                android:layout_marginEnd="136dp"
                android:layout_marginStart="46dp"
                android:layout_marginTop="439dp"
                android:text="Have an account?" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="47dp"
                android:layout_height="42dp"
                android:layout_alignEnd="@+id/imageView4"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="347dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="107dp"
                app:srcCompat="@drawable/ic_store_white_24dp" />

            <EditText
                android:id="@+id/edtRegisName"
                android:layout_width="180dp"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="346dp"
                android:layout_marginEnd="38dp"
                android:layout_marginStart="79dp"
                android:layout_marginTop="108dp"
                android:backgroundTint="@color/colorWhite"
                android:ems="10"
                android:hint="Store name"
                android:inputType="textPersonName"
                android:shadowColor="@color/colorWhite"
                android:textColor="@android:color/black"
                android:textColorHighlight="@color/colorWhite"
                android:textColorLink="@color/colorWhite" />

            <EditText
                android:id="@+id/edtRegisPhoneNumber"
                android:layout_width="178dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="298dp"
                android:layout_marginEnd="38dp"
                android:layout_marginStart="81dp"
                android:layout_marginTop="158dp"
                android:backgroundTint="@color/colorWhite"
                android:ems="10"
                android:hint="Phone number"
                android:inputType="phone"
                android:shadowColor="@color/colorWhite"
                android:textColor="@android:color/black"
                android:textColorHighlight="@color/colorWhite"
                android:textColorLink="@color/colorWhite" />

            <EditText
                android:id="@+id/edtRegisEmail"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="248dp"
                android:layout_marginEnd="38dp"
                android:layout_marginStart="79dp"
                android:layout_marginTop="209dp"
                android:backgroundTint="@color/colorWhite"
                android:ems="10"
                android:hint="e-Mail"
                android:inputType="textEmailAddress"
                android:shadowColor="@color/colorWhite"
                android:textColor="@android:color/black"
                android:textColorHighlight="@color/colorWhite"
                android:textColorLink="@color/colorWhite" />

            <EditText
                android:id="@+id/edtRegisPassword"
                android:layout_width="181dp"
                android:layout_height="46dp"
                android:layout_alignEnd="@+id/edtRegisName"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/imageView4"
                android:layout_marginBottom="193dp"
                android:layout_marginEnd="-1dp"
                android:layout_marginStart="79dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/colorWhite"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:shadowColor="@color/colorWhite"
                android:textColor="@android:color/black"
                android:textColorHighlight="@color/colorWhite"
                android:textColorLink="@color/colorWhite" />

            <EditText
                android:id="@+id/edtRegisConfirmPassword"
                android:layout_width="181dp"
                android:layout_height="46dp"
                android:layout_alignEnd="@+id/edtRegisName"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/imageView4"
                android:layout_marginBottom="138dp"
                android:layout_marginEnd="-1dp"
                android:layout_marginStart="79dp"
                android:layout_marginTop="55dp"
                android:backgroundTint="@color/colorWhite"
                android:ems="10"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:shadowColor="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textColorHighlight="@color/colorWhite"
                android:textColorLink="@color/colorWhite" />

            <Button
                android:id="@+id/btnRegisRegister"
                android:layout_width="97dp"
                android:layout_height="27dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="83dp"
                android:layout_marginEnd="112dp"
                android:layout_marginStart="88dp"
                android:layout_marginTop="386dp"
                android:background="@drawable/my_button_transparant_border_white"
                android:text="Register"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnRegisLogin"
                android:layout_width="62dp"
                android:layout_height="39dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="27dp"
                android:layout_marginEnd="78dp"
                android:layout_marginStart="157dp"
                android:layout_marginTop="430dp"
                android:background="@drawable/my_button_as_link_text"
                android:shadowColor="@android:color/transparent"
                android:text="Login"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

        </RelativeLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>