<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginActivity">>


    <FrameLayout
        android:id="@+id/frmLoginBackground"
        android:layout_width="269dp"
        android:layout_height="400dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"

        android:background="@drawable/mix_shape_border_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <RelativeLayout
            android:layout_width="296dp"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/imgLoginLogo"
                android:layout_width="128dp"
                android:layout_height="102dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="252dp"
                android:layout_marginEnd="106dp"
                android:layout_marginStart="67dp"
                android:layout_marginTop="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_lpay_seller" />

            <EditText
                android:id="@+id/edtLoginPhoneNumber"
                android:layout_width="182dp"
                android:layout_height="41dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="193dp"
                android:layout_marginEnd="46dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="167dp"
                android:backgroundTint="@color/colorWhite"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:shadowColor="@color/colorWhite"
                android:textColor="@android:color/black"
                android:textColorHighlight="@color/colorWhite"
                android:textColorHint="@color/cardview_shadow_start_color"
                android:textColorLink="@color/colorWhite" />

            <EditText
                android:id="@+id/edtLoginPassword"
                android:layout_width="183dp"
                android:layout_height="41dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/edtLoginPhoneNumber"
                android:layout_marginBottom="141dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="218dp"
                android:backgroundTint="@color/colorWhite"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:shadowColor="@color/colorWhite"
                android:textColor="@android:color/black"
                android:textColorHighlight="@color/colorWhite"
                android:textColorHint="@color/cardview_shadow_start_color"
                android:textColorLink="@color/colorWhite" />

            <Button
                android:id="@+id/btnLoginLogin"
                android:layout_width="98dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="82dp"
                android:layout_marginEnd="111dp"
                android:layout_marginStart="87dp"
                android:layout_marginTop="293dp"
                android:background="@drawable/my_button_transparant_border_white"
                android:text="LOGIN"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="39dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/edtLoginPhoneNumber"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="193dp"
                android:layout_marginEnd="195dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="167dp"
                app:srcCompat="@drawable/ic_local_phone_white_24dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="47dp"
                android:layout_height="41dp"
                android:layout_alignEnd="@+id/edtLoginPhoneNumber"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="139dp"
                android:layout_marginEnd="193dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="220dp"
                app:srcCompat="@drawable/ic_lock_white_24dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="28dp"
                android:layout_marginStart="35dp"
                android:text="Need an account?" />

            <Button
                android:id="@+id/btnLoginRegister"
                android:layout_width="68dp"
                android:layout_height="38dp"
                android:layout_alignBottom="@+id/textView7"
                android:layout_marginBottom="-10dp"
                android:layout_toEndOf="@+id/textView7"
                android:background="@drawable/my_button_as_link_text"
                android:shadowColor="@android:color/transparent"
                android:text="Register"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

        </RelativeLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>